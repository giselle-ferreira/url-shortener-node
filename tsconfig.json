{
  "compilerOptions": {
    "baseUrl": "./src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "noEmitOnError": false,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "rootDir": "./src/",
    "sourceMap": true,
    "lib": ["es6", "dom", "es2017", "es7"],
    "target": "es2016",                               
    "module": "commonjs",                           
    "esModuleInterop": true,     
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
